
@{
    ViewBag.Title = "ViewLog";
}

<div class="mainDiv">
    <h2>Security Image Log</h2>

    <table border="1" id="ImageTable" class="logTable table-bordered">
        <tr>
            <th>Image Id</th>
            <th>Camera Name</th>
            <th>Date Taken</th>
            <th>Image</th>
            <th></th>
        <tr />
        @foreach (var i in ViewBag.ImageList)
        {
            <tr>
                <td>@i.ImageId</td>
                <td>@i.CameraName</td>
                <td>@i.Date</td>
                <td><img src="@Url.Content("~/Images/" + @i.FileName)" height="150" width="250" /></td>
                <td><a href="ShowImage?FileName=@i.FileName">View Image</a></td>
            </tr>
        }
    </table>
    <br /> <br />

    <a href="Index" class="goBkBtn">Go Back Home</a>
</div>